<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="extended periods assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/extended_periods/static/src/css/extendedperiods.css"/>
        </xpath>
    </template>
    <data>
        <record id="extended_periods_list_form_view" model="ir.ui.view">
            <field name="name">extend.extendedperiodslist.form</field>
            <field name="model">extend.extendedperiodslist</field>
            <field name="arch" type="xml">
                <form string="Extended periods list">
                    <header>
                        <field name="state" widget="statusbar"  option="{'clickable':'1'}"/>

                    </header>
                    <sheet>

                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="subject_id" />
                            </div>
                            <h1>
                                <field style="width: 100%%" name="subject_id"
                                    default_focus="1" placeholder="Subject Name"
                                    domain="[('is_subject', '=', True)]"
                                    context="{'default_is_subject': True}"
                                     />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field style="width: 100%%" name="entity_id"
                                     placeholder="Entity Name"
                                    context="{'default_is_entity': 1}"
                                     />
                                <field style="width: 100%%" name="new_city_id"
                                     placeholder="City Name"
                                    context="{'default_is_new_city': 1}"
                                     />
                                <field name="agency_issue_date" widget="many2many_tags"/>
                                <field name="modified_expiration_date" widget="many2many_tags"/>
                                <field name="committee_issue_number_to_agency" widget="many2many_tags"/>
                                <field name="issued_by_the_committee_to_the_advisory" widget="many2many_tags"/>
                                <field name="Administrator" widget="one2many_list"/>

                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="extended_periods_list_tree_view" model="ir.ui.view">
            <field name="name">extend.extendedperiodslist.tree</field>
            <field name="model">extend.extendedperiodslist</field>
            <field name="arch" type="xml">
                <tree string="extended periods list">
                    <field name="subject_id"/>
                    <field name="entity_id"/>
                    <field name="new_city_id"/>
                    <field name="agency_issue_date" widget="many2many_tags"/>
                    <field name="modified_expiration_date" widget="many2many_tags"/>
                    <field name="committee_issue_number_to_agency" widget="many2many_tags"/>
                    <field name="issued_by_the_committee_to_the_advisory" widget="many2many_tags"/>
                    <field name="Administrator" widget="one2many_list"/>
                </tree>
            </field>
        </record>

        <record id="extended_periods_list_search_view" model="ir.ui.view">
            <field name="name">extend.extendedperiodslist.search</field>
            <field name="model">extend.extendedperiodslist</field>
            <field name="arch" type="xml">
                <search string="extended periods list">
                    <separator orientation="vertical" />

                    <field name="Administrator"/>
                    <field name="subject_id"/>
                    <field name="entity_id"/>
                    <field name="new_city_id"/>
                    <field name="agency_issue_date"/>
                    <field name="modified_expiration_date" />
                    <field name="committee_issue_number_to_agency" />
                    <field name="issued_by_the_committee_to_the_advisory"/>
                    <newline />
                    <group expand="0" string="Group By">
                        <filter string="Administrator" name='by_Administrator' domain="[]" context="{'group_by':'Administrator'}"/>
                        <filter string="subject_id" name='by_subject_id' domain="[]" context="{'group_by':'subject_id'}"/>
                        <filter string="entity_id" name='by_entity_id' domain="[]" context="{'group_by':'entity_id'}"/>
                        <filter string="new_city_id" name='by_new_city_id' domain="[]" context="{'group_by':'new_city_id'}"/>
                        <filter string="Last 15 days agency issue date" name="four_weeks"  domain="[('agency_issue_date','>=',(context_today() + relativedelta(days=-15, weekday=0)).strftime('%Y-%m-%d'))]"/>
                        <filter string="After 21 committee issue number to agency" name="four_weeks"  domain="[('committee_issue_number_to_agency','=',(context_today() + relativedelta(days=21, weekday=0)).strftime('%Y-%m-%d'))]"/>
                        <filter string="Expire This Week committee issue number to agency" name="expire_this_week"
                        domain="['&amp;',('committee_issue_number_to_agency', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                        ('committee_issue_number_to_agency', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d'))]"/>
                        <newline/>
                        <filter string="Today agency issue date" name="agency_issue_date" domain="[('agency_issue_date','=',(context_today()).strftime('%Y-%m-%d'))]"/>
                        <filter string="Today modified expiration date" name="modified_expiration_date" domain="[('modified_expiration_date','=',(context_today()).strftime('%Y-%m-%d'))]"/>
                        <filter string="Today committee issue number to agency" name="committee_issue_number_to_agency" domain="[('committee_issue_number_to_agency','=',(context_today()).strftime('%Y-%m-%d'))]"/>
                        <filter string="Today issued by the committee to the advisory" name="issued_by_the_committee_to_the_advisory" domain="[('issued_by_the_committee_to_the_advisory','=',(context_today()).strftime('%Y-%m-%d'))]"/>
                        <newline/>

                    </group>
                </search>
            </field>
        </record>

        <record id="extended_periods_list_kanban_view" model="ir.ui.view">
                    <field name="name">extend.extendedperiodslist.Kanban</field>
                    <field name="model">extend.extendedperiodslist</field>
                    <field name="arch" type="xml">
                        <kanban >
                            <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                            <field name="subject_id"/>
                            <field name="entity_id"/>
                            <field name="new_city_id"/>
                            <field name="state"/>
                            <templates>
                                <t t-name="kanban-box" >
                                      <div class="oe_kanban_global_click">
                                        <div class="oe_kanban_details">
                                            <strong class="o_kanban_record_title">
                                                <field name="subject_id"/>
                                            </strong>
                                            <ul>
                                                <li><strong>ENTITY: <field name="entity_id"></field></strong></li>
                                                <li><strong>modified expiration date: <field name="modified_expiration_date" widget="many2many_tags"></field></strong></li>
                                                <li style="color:RED"><strong>Administrator: <field name="Administrator"></field></strong></li>
                                            </ul>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
        </record>

        <record id="extended_periods_list_calendar_view" model="ir.ui.view">
            <field name="name">extend.extendedperiodslist.calendar.view</field>
            <field name="model">extend.extendedperiodslist</field>
            <field name="arch" type="xml">
                <calendar string="extended periods list" color="subject_id"
                    quick_add="True"  event_open_popup="true" mode="month" date_start="write_date">
                    <field name="subject_id" />
                    <field name="entity_id" />
                    <field name="new_city_id" />
                </calendar>
            </field>
        </record>

        <record id="view_extendedperiodslist_report_pivot" model="ir.ui.view">
            <field name="name">extend.extendedperiodslist.pivot</field>
            <field name="model">extend.extendedperiodslist</field>
            <field name="arch" type="xml">
                <pivot string="extended periods list History Analysis">
                   <field name="subject_id" type="row"/>
                   <field name="new_city_id" type="measure"/>
                    <field name="subject_id" type="measure"/>
                    <field name="entity_id" type="measure"/>
                   <field name="entity_id" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="view_extended_periods_graph" model="ir.ui.view" >
           <field name="name">extend.extendedperiodslistt.graph</field>
           <field name="model">extend.extendedperiodslist</field>
           <field name="type">graph</field>
           <field name="arch" type="xml">
                 <graph string="extended periods list"  orientation="horizontal"  type="pie" >
                    <field name="new_city_id"/>
                     <field name="subject_id" group="True" type="measure" />
                     <field name="entity_id" group="True" type="measure" />
                     <field name="Administrator" />
                </graph>
            </field>
        </record>

        <record id="extended_periods_list_act_window" model="ir.actions.act_window">
            <field name="name">extended periods list</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extend.extendedperiodslist</field>
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="extended_periods_list_search_view"></field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new extended periods list.
                </p>
            </field>
        </record>
        <menuitem name="extendedperiodslist" id="extended_periods_list_menu"
                  parent="main_menu_extended_periods_Management"
                  action="extended_periods_list_act_window"/>
    </data>
</odoo>