<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="view_activity_extendedperiods" model="ir.ui.view">
                <field name="name">extended.extendedperiodsactivity.activity</field>
                <field name="model">extended.extendedperiodsactivity</field>
                <field name="arch" type="xml">
                    <activity string="Applicants">
                        <templates>
                            <div t-name="activity-box">
                                <div>
                                    <field name="name"/>
                                </div>
                            </div>
                        </templates>
                    </activity>
                </field>
            </record>

            <record id="view_activity_extendedperiods_tree" model="ir.ui.view">
                <field name="name">extended.extendedperiodsactivity.tree</field>
                    <field name="model">extended.extendedperiodsactivity</field>
                    <field name="priority">2</field>
                    <field name="arch" type="xml">
                        <tree string="Overtime records">
                            <field name="name"></field>
                        </tree>
                </field>
            </record>

            <record id="view_activity_extendedperiods_form" model="ir.ui.view">
                <field name="name">extended.extendedperiodsactivity.form</field>
                <field name="model">extended.extendedperiodsactivity</field>
                <field name="arch" type="xml">
                    <form string="Study roadmap record">
                        <sheet>
                            <group>
                                <field name="name"></field>
                            </group>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_ids" widget="mail_thread"></field>
                            <field name="activity_ids" widget="mail_activity"></field>
                        </div>
                    </form>
                </field>
            </record>

            <record id="action_activity_extendedperiods" model="ir.actions.act_window">
                <field name="name">Activity View</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">extended.extendedperiodsactivity</field>
                <field name="view_mode">activity,tree,form</field>
            </record>
    </data>
</odoo>