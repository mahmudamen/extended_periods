<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="notify_list_form_view" model="ir.ui.view">
            <field name="name">extend.notify.form</field>
            <field name="model">mail.message</field>
            <field name="arch" type="xml">
                <form string="Notify list">

                    <sheet>

                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="subtype_id" />
                            </div>
                            <h1>
                                <field style="width: 100%%" name="subtype_id"
                                    default_focus="1" placeholder="Subject Name"
                                     />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field style="width: 100%%" name="body"
                                     placeholder="partner"
                                     />
                                <field style="width: 100%%" name="res_id"
                                     placeholder="body"
                                     />
                                <group col="5" style="width:100%;">

                                </group>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="notify_tree_view" model="ir.ui.view">
            <field name="name">extend.notify.tree</field>
            <field name="model">mail.message</field>
            <field name="arch" type="xml">
                <tree string="extended periods list">
                    <field name="body"/>
                </tree>
            </field>
        </record>

        <record id="notify_act_window" model="ir.actions.act_window">
            <field name="name">notify list</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mail.message</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new notify list.
                </p>
            </field>
        </record>

        <menuitem name="notify" id="notify_list_menu"
            parent="main_menu_extended_periods_Management"
            action="notify_act_window"/>

    </data>
</odoo>