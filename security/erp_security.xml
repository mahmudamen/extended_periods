<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="extended_periods_category">
            <field name="name">extended periods</field>
            <field name="sequence">3</field>
        </record>

        <record id="group_extended_periods_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="extended_periods.extended_periods_category"/>
        </record>

        <record id="group_extended_periods_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="extended_periods.extended_periods_category"/>
            <field name="implied_ids" eval="[(4, ref('group_extended_periods_employee'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


    </data>
</odoo>